let g:coc_enable = 1
let s:loaded_nvim_treesitter = 0
let g:loaded_clipboard_provider = 1
let s:lazy_load_plug_list = []

function s:lazy_load(plug_name)
    call add(s:lazy_load_plug_list, a:plug_name)
    Plug a:plug_name, {'on': []}
endfunction

