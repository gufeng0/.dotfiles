call timer_start(0, 'LoadPlug')
function! LoadPlug(timer) abort
  runtime im.vim

  for plug_name in s:lazy_load_plug_list
      call plug#load(split(plug_name, '/')[1])
  endfor

  unlet g:loaded_clipboard_provider
  runtime autoload/provider/clipboard.vim
endfunction

